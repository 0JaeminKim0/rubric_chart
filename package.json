{
  "name": "task-scoring-system",
  "version": "1.0.0",
  "type": "module",
  "description": "LLM-based Task Scoring System with 4-Quadrant Bubble Chart Visualization",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "esbuild src/server.ts --bundle --platform=node --target=node18 --outfile=dist/server.js --format=esm --packages=external",
    "start": "node dist/server.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "dotenv": "^17.2.3",
    "hono": "^4.11.3",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0"
  }
}
